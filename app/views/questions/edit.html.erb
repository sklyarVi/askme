<div class="container"> 
    <h2 class="title-lg mb">Edit question <%= @question.id %></h2>

    <%= form_with model: @question do |form| %>
    <p><%= form.label :body, 'Write the question:' %></p>
    <p><%= form.text_area :body, rows: 5 %></p>

    <p class="mt"><%= form.label :user_id, 'User id:' %></p>
    <p><%= form.text_field :user_id %></p>

    <p class="mt"><%= form.submit 'Edit' %></p>

    <% end %>
</div>