<div class="container"> 
    <h2 class="title-lg mb">Question: <%= @question.id %></h2>

    <p class="mb-sm"><%= @question.body %></p>
    <p>User id: <b><%= @question.user_id%></b> </p>


    <p class="mt"><%= link_to "edit", edit_question_path(@question) %></p>
    <div>
        <%= button_to  'Delete question', question_path(@question), method: :delete %> 
    </div>

    <p class="mt"><%= link_to "All Questions", questions_path %></p>
</div>